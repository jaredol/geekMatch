<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link href='http://fonts.googleapis.com/css?family=PT+Sans+Caption:400' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/styles.css">
  
  <title>&hearts; Geek Match &hearts;</title>
</head>

<body>
  <% if logged_in? %>

  <p>logged in as <%= current_user.email %></p>

  <p>
      <form action="/session" method="post">
          <input type="hidden" name="_method" value="delete">
          <button class="btn btn-default btn-sm">logout</button>

      </form>
  </p>

  <% else %>


   <!-- <a class="show-login" href="/session/new">login</a> -->
   <div class="login_wrap">
       <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <a class="show_login" href="">login</a></p>
       <p><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <a href="/profiles/new">Create a profile</a></p>
   </div>



   <% end %>
   <!-- <p><a href="/">Home</a></p> -->
   
   
<div class="wrapper">
    <h1><a href="/">geek_Match<span class="hearts">&hearts;</span></a></h1>
    
    <%= yield %>

   <form class="form_login" action="/session" method="post">
        <h2>Log-in</h2>
      <div class="form_row">
        <span class="close glyphicon glyphicon-remove" aria-hidden="true"></span>
         
          <label for="email">email</label>
          <input placeholder="email" id="email" class="form-control" type="text" name="email">
      </div>
      <div class="form_row">
          <label for="password">password</label>
          <input placeholder="password" class="form-control" id="password" type="password" name="password">
      </div>
       <button class="btn btn-danger">login</button>
    </form>

</div>

   <script src="/js/jquery.js"></script>
   <script src="/js/app.js"></script>
</body>